<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_learncolor_three"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.esraa.kidsworld.LearncolorThree">


    <ImageButton
        android:id="@+id/menu"
        android:src="@drawable/menu"
        android:onClick="menu"
        android:layout_height="100dp"
        android:layout_width="100dp"
        android:background="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/arrowBack" />
    <ImageButton
        android:id="@+id/arrowNext"
        android:layout_height="50dp"
        android:src="@drawable/arrow"
        android:layout_width="70dp"
        android:onClick="next"
        android:layout_alignTop="@+id/BImage"
        android:layout_toEndOf="@+id/BImage"
        android:layout_marginStart="28dp"
        android:layout_marginTop="159dp" />

    <ImageButton
        android:id="@+id/arrowBack"
        android:layout_height="50dp"
        android:src="@drawable/arrowback"
        android:layout_width="70dp"
        android:onClick="back"
        android:layout_alignTop="@+id/arrowNext"
        android:layout_alignParentStart="true"
        android:layout_marginStart="35dp" />

    <Button
        android:id="@+id/al"
        android:layout_height="70dp"
        android:text="Yellow"
        android:background="@android:color/black"
        android:textColor="#ffffff"
        android:textStyle="normal|bold"
        android:textSize="40sp"
        android:layout_marginTop="70dp"
        android:layout_width="250dp"
        android:layout_below="@+id/BImage"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:src="@drawable/black"
        android:id="@+id/BImage"
        android:layout_height="380dp"
        android:layout_width="300dp"
        android:layout_marginTop="66dp"
        android:layout_below="@+id/menu"
        android:layout_centerHorizontal="true" />
</RelativeLayout>









