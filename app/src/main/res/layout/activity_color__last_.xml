<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_color__last_"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.esraa.kidsworld.Color_Last_Activity">

    <ProgressBar
        android:layout_height="40dp"
        android:id="@+id/ProgressBar"
        android:foregroundGravity="center"
        style="@android:style/Widget.Holo.ProgressBar.Horizontal"
        android:max="90"
        android:progress="90"
        android:visibility="visible"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/Level1"
        android:layout_alignEnd="@+id/Level1"
        android:layout_width="140dp"
        android:layout_toEndOf="@+id/Menu" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ProgressBar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:numStars="3"
        android:rating="3" />

    <ImageView
        android:id="@+id/congratulation"
        android:src="@drawable/congratulation"
        android:layout_height="180dp"
        android:layout_width="200dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"></LinearLayout>

    <Button
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="Try Again"
        android:id="@+id/TryAgain"
        android:background="@color/category_colors"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:onClick="tryAgain"
        android:textStyle="normal|bold"
        android:layout_above="@+id/congratulation"
        android:layout_toEndOf="@+id/ProgressBar"
        android:layout_marginBottom="12dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Congratulation You have successfully completed the first level"
        android:textColor="@color/category_colors"
        android:textSize="30sp"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Level1"
        android:text="LEVEL1"
        android:gravity="center"
        android:textSize="40sp"
        android:textColor="@color/category_colors"
        android:background="#ffffff"
        android:textStyle="normal|bold"
        android:layout_weight="1"
        android:textAlignment="center"
        android:layout_marginTop="57dp"
        android:layout_below="@+id/linearLayout2"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_height="50dp"
        android:text="Menu"
        android:id="@+id/Menu"
        android:onClick="goToMenu"
        android:background="@color/category_colors"
        android:textColor="#ffffff"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:textSize="18sp"
        android:layout_width="90dp"
        android:layout_alignTop="@+id/TryAgain"
        android:layout_alignEnd="@+id/congratulation" />
</RelativeLayout>



