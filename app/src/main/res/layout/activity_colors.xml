<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_animals"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.esraa.kidsworld.Colors">

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="3"
        android:rating="0"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/Back" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:id="@+id/button"
        android:background="#000000"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:onClick="next"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/yellow"
        android:layout_height="wrap_content"
        android:text="yellow"
        android:background="#8800A0"
        android:textColor="#ffffff"
        android:textStyle="normal|bold"
        android:textSize="20sp"
        android:onClick="wrong"
        android:layout_width="140dp"
        android:layout_alignBaseline="@+id/green"
        android:layout_alignBottom="@+id/green"
        android:layout_toEndOf="@+id/button" />

    <Button
        android:id="@+id/white"
        android:layout_height="wrap_content"
        android:text="white"
        android:background="#8800A0"
        android:textColor="#ffffff"
        android:textStyle="normal|bold"
        android:textSize="20sp"
        android:onClick="wrong"
        android:layout_width="140dp"
        android:layout_alignBaseline="@+id/red"
        android:layout_alignBottom="@+id/red"
        android:layout_alignStart="@+id/yellow" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/options"
        android:text="Options"
        android:textColor="#8800A0"
        android:textSize="20sp"
        android:textStyle="normal|bold"
        android:layout_above="@+id/white"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp" />

    <ImageView
        android:src="@drawable/green"
        android:id="@+id/greenImage"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_above="@+id/options"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="42dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Text"
        android:text="Identify below color"
        android:textColor="#8800A0"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="87dp" />

    <Button
        android:id="@+id/Back"
        android:layout_height="wrap_content"
        android:text="Back"
        android:textColor="#8800A0"
        android:textSize="20sp"
        android:background="#ffffff"
        android:layout_width="wrap_content"
        android:onClick="goBack"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Level1"
        android:text="LEVEL1"
        android:textSize="20sp"
        android:textColor="#1225CA"
        android:background="#ffffff"
        android:textStyle="normal|bold"
        android:layout_weight="1"
        android:textAlignment="center"
        android:layout_alignBaseline="@+id/Back"
        android:layout_alignBottom="@+id/Back"
        android:layout_alignStart="@+id/button" />

    <Button
        android:id="@+id/red"
        android:layout_height="wrap_content"
        android:text="red"
        android:background="#8800A0"
        android:textColor="#ffffff"
        android:textStyle="normal|bold"
        android:textSize="20sp"
        android:onClick="wrong"
        android:layout_width="140dp"
        android:layout_marginBottom="12dp"
        android:layout_above="@+id/green"
        android:layout_toStartOf="@+id/options" />

    <Button
        android:id="@+id/green"
        android:layout_height="wrap_content"
        android:text="green"
        android:background="#8800A0"
        android:textColor="#ffffff"
        android:textStyle="normal|bold"
        android:textSize="20sp"
        android:onClick="correct"
        android:layout_width="140dp"
        android:layout_marginBottom="12dp"
        android:layout_above="@+id/button"
        android:layout_alignStart="@+id/red" />

</RelativeLayout>
