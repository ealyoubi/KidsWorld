<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_shapes"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.esraa.kidsworld.Shapes">

    <ImageButton
        android:id="@+id/arrowNext"
        android:layout_height="50dp"
        android:src="@drawable/arrow"
        android:layout_width="70dp"
        android:onClick="next"
        android:layout_alignTop="@+id/triangleImage"
        android:layout_toEndOf="@+id/triangleImage"
        android:layout_marginStart="28dp"
        android:layout_marginTop="159dp" />

    <ImageButton
        android:id="@+id/arrowBack"
        android:layout_height="50dp"
        android:src="@drawable/arrowback"
        android:layout_width="70dp"
        android:onClick="back"
        android:layout_alignTop="@+id/arrowNext"
        android:layout_alignParentStart="true"
        android:layout_marginStart="35dp" />

    <Button
        android:id="@+id/Rectangle"
        android:layout_height="wrap_content"
        android:text="Rectangle"
        android:background="@color/category_Shaps"
        android:textColor="#ffffff"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:onClick="wrong"
        android:layout_width="140dp"
        android:layout_marginTop="62dp"
        android:layout_below="@+id/triangleImage"
        android:layout_alignStart="@+id/triangleImage" />

    <Button
        android:id="@+id/Square"
        android:layout_height="wrap_content"
        android:text="Square"
        android:background="@color/category_Shaps"
        android:textColor="#ffffff"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:onClick="wrong"
        android:layout_width="140dp"
        android:layout_alignTop="@+id/triangle"
        android:layout_alignStart="@+id/Circle" />

    <Button
        android:id="@+id/Circle"
        android:layout_height="wrap_content"
        android:text="Circle"
        android:background="@color/category_Shaps"
        android:textColor="#ffffff"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:onClick="wrong"
        android:layout_width="140dp"
        android:layout_alignBaseline="@+id/Rectangle"
        android:layout_alignBottom="@+id/Rectangle"
        android:layout_alignEnd="@+id/triangleImage" />

    <Button
        android:id="@+id/triangle"
        android:layout_height="wrap_content"
        android:text="triangle"
        android:background="@color/category_Shaps"
        android:textColor="#ffffff"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:onClick="correct"
        android:layout_width="140dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/Rectangle"
        android:layout_alignStart="@+id/Rectangle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/options"
        android:text="Options"
        android:textColor="@color/category_Shaps"
        android:textSize="20sp"
        android:textStyle="normal|bold"
        android:layout_above="@+id/Rectangle"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/menu"
        android:src="@drawable/menu"
        android:onClick="menu"
        android:layout_height="100dp"
        android:layout_width="100dp"
        android:background="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/arrowBack" />

    <ImageView
        android:src="@drawable/triangle"
        android:id="@+id/triangleImage"
        android:layout_width="300dp"
        android:layout_height="380dp"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/Text"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Text"
        android:text="Identify below shape"
        android:textColor="@color/category_Shaps"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_below="@+id/menu"
        android:layout_centerHorizontal="true" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="3"
        android:rating="0"
        android:layout_alignBottom="@+id/menu"
        android:layout_centerHorizontal="true"
        android:isIndicator="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Level1"
        android:text="LEVEL1"
        android:textSize="20sp"
        android:textColor="#1225CA"
        android:background="#ffffff"
        android:textStyle="normal|bold"
        android:layout_weight="1"
        android:textAlignment="center"
        android:layout_above="@+id/ratingBar5"
        android:layout_alignEnd="@+id/options" />

</RelativeLayout>


