<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/activity_learn_or_play"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
tools:context="com.example.esraa.kidsworld.LearnOrPlay">

<Button
    android:text="Play"
    android:layout_width="300dp"
    android:layout_height="100dp"
    android:layout_marginTop="88dp"
    android:textColor="#ffffff"
    android:textSize="40sp"
    android:background="#F442A4"
    android:onClick="play"
    android:id="@+id/Play"
    android:layout_below="@+id/Learn"
    android:layout_alignStart="@+id/Learn" />
<ImageButton
    android:id="@+id/menu"
    android:src="@drawable/menu"
    android:onClick="menu"
    android:layout_height="100dp"
    android:layout_width="100dp"
    android:background="#ffffff"
    android:layout_alignParentTop="true"/>

<Button
    android:text="Learn"
    android:layout_height="100dp"
    android:textColor="#ffffff"
    android:background="#F442A4"
    android:id="@+id/Learn"
    android:onClick="learn"
    android:layout_width="300dp"
    android:textSize="40sp"
    android:layout_marginTop="95dp"
    android:layout_below="@+id/menu"
    android:layout_centerHorizontal="true" />

<ImageView
    android:src="@drawable/animals"
    android:layout_width="400dp"
    android:layout_height="300dp"
    android:layout_alignParentBottom="true"
    android:layout_alignParentStart="true" />

</RelativeLayout>
