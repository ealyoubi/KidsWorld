<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ahpha_third_play"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.esraa.kidsworld.activity_ahpha_third_play">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/menu"
            android:src="@drawable/menu"
            android:onClick="menu"
            android:layout_height="100dp"
            android:layout_width="100dp"
            android:background="#ffffff"
            android:layout_alignParentTop="true"
            android:layout_alignEnd="@+id/arrowBack" />


    </LinearLayout>

    <ImageView
        android:id="@+id/c1_Image"
        android:src="@drawable/clettr"
        android:layout_height="380dp"
        android:layout_width="300dp"
        android:layout_marginTop="175dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <ImageButton
        android:id="@+id/arrowNext"
        android:layout_height="50dp"
        android:src="@drawable/arrow"
        android:layout_width="70dp"
        android:onClick="next"
        android:layout_alignTop="@+id/c1_Image"
        android:layout_toEndOf="@+id/c1_Image"
        android:layout_marginStart="28dp"
        android:layout_marginTop="159dp" />

    <ImageButton
        android:id="@+id/arrowBack"
        android:layout_height="50dp"
        android:src="@drawable/arrowback"
        android:layout_width="70dp"
        android:onClick="back"
        android:layout_alignTop="@+id/arrowNext"
        android:layout_alignParentStart="true"
        android:layout_marginStart="35dp" />

    <Button
        android:id="@+id/Zero"
        android:layout_height="wrap_content"
        android:text="C_Lettr"
        android:background="@color/category_numbers"
        android:textColor="#ffffff"
        android:textStyle="normal|bold"
        android:textSize="20sp"
        android:onClick="correct"
        android:layout_width="140dp"
        android:layout_alignBaseline="@+id/B"
        android:layout_alignBottom="@+id/B"
        android:layout_alignStart="@+id/A" />

    <Button
        android:id="@+id/B"
        android:layout_height="wrap_content"
        android:text="A_lettr"
        android:background="@color/category_numbers"
        android:textColor="#ffffff"
        android:onClick="wrong"
        android:textStyle="normal|bold"
        android:textSize="20sp"
        android:layout_width="140dp"
        android:layout_marginBottom="63dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/C" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/options"
        android:text="Options"
        android:textColor="@color/category_numbers"
        android:textSize="20sp"
        android:textStyle="normal|bold"
        android:layout_below="@+id/c1_Image"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/C"
        android:layout_height="wrap_content"
        android:text="B_lettr"
        android:background="@color/category_numbers"
        android:textColor="#ffffff"
        android:onClick="wrong"
        android:textStyle="normal|bold"
        android:textSize="20sp"
        android:layout_width="140dp"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/options"
        android:layout_toStartOf="@+id/Level1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Level1"
        android:text="LEVEL1"
        android:textSize="20sp"
        android:textColor="@color/category_numbers"
        android:background="#ffffff"
        android:textStyle="normal|bold"
        android:layout_weight="1"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/options"
        android:layout_marginTop="22dp" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="3"
        android:rating="0"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/Level1"
        android:layout_centerHorizontal="true"
        android:isIndicator="true" />

    <Button
        android:id="@+id/A"
        android:layout_height="wrap_content"
        android:text="D_lettr"
        android:background="@color/category_numbers"
        android:textColor="#ffffff"
        android:textStyle="normal|bold"
        android:textSize="20sp"
        android:onClick="wrong"
        android:layout_width="140dp"
        android:layout_alignBaseline="@+id/C"
        android:layout_alignBottom="@+id/C"
        android:layout_toEndOf="@+id/options" />

</RelativeLayout>



