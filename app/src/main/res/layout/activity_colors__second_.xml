<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_animals"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.esraa.kidsworld.Colors_Second_Activity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:id="@+id/button"
        android:background="#000000"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:onClick="next"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/options" />

    <Button
        android:id="@+id/black"
        android:layout_height="wrap_content"
        android:text="black"
        android:background="#8800A0"
        android:textColor="#ffffff"
        android:textStyle="normal|bold"
        android:textSize="20sp"
        android:onClick="wrong"
        android:layout_width="140dp"
        android:layout_above="@+id/button"
        android:layout_toStartOf="@+id/options"
        android:layout_marginBottom="24dp" />

    <Button
        android:id="@+id/blue"
        android:layout_height="wrap_content"
        android:text="blue"
        android:background="#8800A0"
        android:textColor="#ffffff"
        android:textStyle="normal|bold"
        android:textSize="20sp"
        android:onClick="correct"
        android:layout_width="140dp"
        android:layout_alignBaseline="@+id/black"
        android:layout_alignBottom="@+id/black"
        android:layout_toEndOf="@+id/button" />

    <Button
        android:id="@+id/white"
        android:layout_height="wrap_content"
        android:text="white"
        android:background="#8800A0"
        android:textColor="#ffffff"
        android:textStyle="normal|bold"
        android:textSize="20sp"
        android:onClick="wrong"
        android:layout_width="140dp"
        android:layout_alignStart="@+id/blue"
        android:layout_alignTop="@+id/red" />

    <Button
        android:id="@+id/red"
        android:layout_height="wrap_content"
        android:text="red"
        android:background="#8800A0"
        android:textColor="#ffffff"
        android:textStyle="normal|bold"
        android:textSize="20sp"
        android:onClick="wrong"
        android:layout_width="140dp"
        android:layout_marginBottom="13dp"
        android:layout_above="@+id/black"
        android:layout_toStartOf="@+id/Level1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/options"
        android:text="Options"
        android:textColor="#8800A0"
        android:textSize="20sp"
        android:textStyle="normal|bold"
        android:layout_above="@+id/red"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="19dp" />

    <ImageView
        android:src="@drawable/blue"
        android:id="@+id/blueImage"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_above="@+id/options"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Text"
        android:text="Identify below color"
        android:textColor="#8800A0"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_above="@+id/blueImage"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="28dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Level1"
        android:text="LEVEL1"
        android:textSize="20sp"
        android:textColor="#1225CA"
        android:background="#ffffff"
        android:textStyle="normal|bold"
        android:layout_weight="1"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/options"
        android:layout_marginTop="11dp" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="3"
        android:rating="1"
        android:layout_above="@+id/Text"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/Back"
        android:layout_height="wrap_content"
        android:text="Back"
        android:textColor="#8800A0"
        android:textSize="20sp"
        android:background="#ffffff"
        android:layout_width="wrap_content"
        android:onClick="goBack"
        android:layout_alignTop="@+id/Level1"
        android:layout_alignParentStart="true" />


</RelativeLayout>


