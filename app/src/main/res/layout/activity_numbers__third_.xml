<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_animals"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.esraa.kidsworld.Numbers_Third_Activity">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/menu"
            android:src="@drawable/menu"
            android:onClick="menu"
            android:layout_height="100dp"
            android:layout_width="100dp"
            android:background="#ffffff"
            android:layout_alignParentTop="true"
            android:layout_alignEnd="@+id/arrowBack" />


    </LinearLayout>

    <ImageView
        android:id="@+id/TwoImage"
        android:src="@drawable/two"
        android:layout_height="380dp"
        android:layout_width="300dp"
        android:layout_marginTop="175dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <ImageButton
        android:id="@+id/arrowNext"
        android:layout_height="50dp"
        android:src="@drawable/arrow"
        android:layout_width="70dp"
        android:onClick="next"
        android:layout_alignTop="@+id/TwoImage"
        android:layout_toEndOf="@+id/TwoImage"
        android:layout_marginStart="28dp"
        android:layout_marginTop="159dp" />

    <ImageButton
        android:id="@+id/arrowBack"
        android:layout_height="50dp"
        android:src="@drawable/arrowback"
        android:layout_width="70dp"
        android:onClick="back"
        android:layout_alignTop="@+id/arrowNext"
        android:layout_alignParentStart="true"
        android:layout_marginStart="35dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Level1"
        android:text="LEVEL1"
        android:textSize="20sp"
        android:textColor="#1225CA"
        android:background="#ffffff"
        android:textStyle="normal|bold"
        android:layout_weight="1"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/options"
        android:layout_marginTop="22dp" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="3"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/Level1"
        android:layout_centerHorizontal="true"
        android:rating="2"
        android:isIndicator="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/options"
        android:text="Options"
        android:textColor="#FD8E09"
        android:textSize="20sp"
        android:textStyle="normal|bold"
        android:layout_above="@+id/five"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp" />

    <Button
        android:id="@+id/five"
        android:layout_height="wrap_content"
        android:text="five"
        android:background="#FD8E09"
        android:textColor="#ffffff"
        android:textStyle="normal|bold"
        android:textSize="20sp"
        android:onClick="wrong"
        android:layout_width="140dp"
        android:layout_alignBaseline="@+id/two"
        android:layout_alignBottom="@+id/two"
        android:layout_toEndOf="@+id/options" />

    <Button
        android:id="@+id/two"
        android:layout_height="wrap_content"
        android:text="Two"
        android:background="#FD8E09"
        android:textColor="#ffffff"
        android:onClick="correct"
        android:textStyle="normal|bold"
        android:textSize="20sp"
        android:layout_width="140dp"
        android:layout_marginBottom="24dp"
        android:layout_above="@+id/one"
        android:layout_alignStart="@+id/TwoImage" />

    <Button
        android:id="@+id/one"
        android:layout_height="wrap_content"
        android:text="one"
        android:background="#FD8E09"
        android:textColor="#ffffff"
        android:onClick="wrong"
        android:textStyle="normal|bold"
        android:textSize="20sp"
        android:layout_width="140dp"
        android:layout_marginBottom="32dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/Level1" />

    <Button
        android:id="@+id/Zero"
        android:layout_height="wrap_content"
        android:text="Zero"
        android:background="#FD8E09"
        android:textColor="#ffffff"
        android:textStyle="normal|bold"
        android:textSize="20sp"
        android:onClick="wrong"
        android:layout_width="140dp"
        android:layout_below="@+id/two"
        android:layout_alignStart="@+id/two" />

</RelativeLayout>

